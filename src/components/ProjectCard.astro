---
interface Props {
  title: string;
  description: string;
  techTags: string[];
  repoUrl?: string;
  liveUrl?: string;
  image?: string;
}

const { title, description, techTags, repoUrl, liveUrl, image } = Astro.props;
---

<div class="rounded-lg border border-[var(--color-bg-dark-card)] bg-[var(--color-bg-dark-surface)] p-5 shadow-md shadow-black/20">
  {image && (
    <img src={image} alt={title} class="mb-4 max-h-48 w-full rounded-md object-cover sm:max-h-56" />
  )}
  <h3 class="text-lg font-semibold">{title}</h3>
  <p class="mt-2 text-sm text-gray-300">{description}</p>
  {techTags.length > 0 && (
    <div class="mt-3 flex flex-wrap gap-2">
      {techTags.map((tag) => (
        <span class="rounded-full bg-[var(--color-bg-dark-card)] px-2.5 py-0.5 text-xs text-[var(--color-cyan)]">
          {tag}
        </span>
      ))}
    </div>
  )}
  {(repoUrl || liveUrl) && (
    <div class="mt-4 flex gap-4">
      {repoUrl && (
        <a href={repoUrl} target="_blank" rel="noopener noreferrer" class="text-sm text-[var(--color-cyan)] hover:underline">
          Code
        </a>
      )}
      {liveUrl && (
        <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="text-sm text-[var(--color-cyan)] hover:underline">
          Live Demo
        </a>
      )}
    </div>
  )}
</div>
