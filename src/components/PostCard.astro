---
interface Props {
  title: string;
  date: Date;
  description: string;
  tags: string[];
  slug: string;
}

const { title, date, description, tags, slug } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-GB', {
  day: 'numeric',
  month: 'short',
  year: 'numeric',
});
---

<a href={`/blog/${slug}`} class="block rounded-lg border border-[var(--color-bg-dark-card)] bg-[var(--color-bg-dark-surface)] p-5 shadow-md shadow-black/20 transition-all hover:border-[var(--color-purple)] hover:shadow-lg hover:shadow-[var(--color-purple)]/10">
  <h3 class="text-lg font-semibold">{title}</h3>
  <time datetime={new Date(date).toISOString()} class="mt-1 block text-sm text-gray-400">
    {formattedDate}
  </time>
  <p class="mt-2 text-sm text-gray-300">{description}</p>
  {tags.length > 0 && (
    <div class="mt-3 flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="rounded-full bg-[var(--color-bg-dark-card)] px-2.5 py-0.5 text-xs text-[var(--color-cyan)]">
          {tag}
        </span>
      ))}
    </div>
  )}
</a>
